{
    "name": "projecteuler",
    "displayName": "Project Euler",
    "publisher": "slfotg",
    "description": "Allow viewing Project Euler problems from your editor",
    "icon": "images/euler.png",
    "version": "0.0.3",
    "repository": {
        "type": "git",
        "url": "https://github.com/slfotg/projecteuler"
    },
    "engines": {
        "vscode": "^1.109.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onStartupFinished"
    ],
    "main": "./dist/extension.js",
    "contributes": {
        "configuration": {
            "properties": {
                "projecteuler.enableCodeLens": {
                    "type": "boolean",
                    "default": true,
                    "description": "Enable editor links for Euler Problems (matches on 'pe###', 'problem=###', or 'problem = ###')"
                }
            }
        },
        "views": {
            "explorer": [
                {
                    "id": "projecteuler.problemView",
                    "name": "Project Euler Problems",
                    "icon": "$(symbol-misc)"
                }
            ]
        },
        "viewsWelcome": [
            {
                "view": "projecteuler.problemView",
                "contents": "No problem data found.\n[Refresh](command:projecteuler.loadProblemData)"
            }
        ],
        "commands": [
            {
                "command": "projecteuler.searchProblem",
                "title": "Euler: Search Problem"
            },
            {
                "command": "projecteuler.showProblem",
                "title": "Euler: Show Problem"
            },
            {
                "command": "projecteuler.refreshTree",
                "title": "Euler: Refresh Tree"
            },
            {
                "command": "projecteuler.clearTreeData",
                "title": "Euler: Clear Tree Data"
            },
            {
                "command": "projecteuler.loadProblemData",
                "title": "Euler: Load Problem Data"
            }
        ],
        "menus": {
            "commandPalette": [
                {
                    "command": "projecteuler.searchProblem"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run package",
        "compile": "webpack",
        "watch": "webpack --watch",
        "package": "webpack --mode production --devtool hidden-source-map",
        "compile-tests": "tsc -p . --outDir out",
        "watch-tests": "tsc -p . -w --outDir out",
        "pretest": "npm run compile-tests && npm run compile && npm run lint",
        "lint": "eslint src --ext ts",
        "test": "vscode-test"
    },
    "devDependencies": {
        "@types/cheerio": "^0.22.35",
        "@types/mocha": "^10.0.7",
        "@types/node": "24.0.0",
        "@types/papaparse": "^5.5.2",
        "@types/vscode": "^1.109.0",
        "@typescript-eslint/eslint-plugin": "^8.56.0",
        "@typescript-eslint/parser": "^8.56.0",
        "@vscode/test-cli": "^0.0.12",
        "@vscode/test-electron": "^2.4.0",
        "eslint": "^10.0.0",
        "ts-loader": "^9.5.1",
        "typescript": "^5.4.5",
        "webpack": "^5.105.2",
        "webpack-cli": "^6.0.1"
    },
    "dependencies": {
        "cheerio": "^1.2.0",
        "papaparse": "^5.5.3"
    }
}
